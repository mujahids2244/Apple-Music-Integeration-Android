<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".activity.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/backtomain"
            android:layout_marginTop="40dp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/arrowback"
            android:layout_marginStart="50dp"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:paddingStart="29dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Create new account"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginStart="25dp"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please fill in the form to continue"
                android:textSize="15sp"
                android:textColor="@color/greyish"
                android:layout_marginStart="25dp"
                />


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etFullName"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="Full Name"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:paddingLeft="15dp"/>


        <EditText
            android:id="@+id/etEmail"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:hint="Email"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/etVerifyPass"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:hint="Verify Password"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/subscription"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:text="Note: Apple Music App Must be Installed on device"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="@color/white"
            android:paddingLeft="15dp"/>






    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/gotoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existing User? Sign in"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Signup"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/orange"
            />

    </LinearLayout>




</LinearLayout>