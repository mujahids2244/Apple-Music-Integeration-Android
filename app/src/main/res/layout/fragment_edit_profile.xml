<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".fragment.EditProfile">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_40sdp">

        <ImageView
            android:id="@+id/backtoaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="save"
            android:textColor="@color/orange"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <View
        android:layout_below="@+id/top"
        android:id="@+id/break_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/break_line">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/uploadpic"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/img"
            android:src="@drawable/ic_baseline_person_24" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:id="@+id/clickforUpload"
            android:layout_marginStart="@dimen/_173sdp"
            android:layout_marginTop="@dimen/_63sdp"
            android:background="@drawable/img2"
            android:src="@drawable/ic_baseline_camera_alt_24"/>

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/uploadpic"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:hint="Name"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etname"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/greyish"
            android:hint="Email"
            android:padding="@dimen/_13sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/updateupbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/mail"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="@color/orange"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />




    </RelativeLayout>


</RelativeLayout>
