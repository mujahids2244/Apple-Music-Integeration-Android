<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:tag="match"
    tools:context=".fragment.matchSong.MatchSongs">




    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_40sdp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Songs"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"/>


    </LinearLayout>

    <View
        android:id="@+id/break_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top"
        android:background="@color/greyish" />


    <LinearLayout
        android:id="@+id/songsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/break_line"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="">


        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_185sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/view_deisgn">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvsong_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/song_pic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:background="@drawable/ic_baseline_library_music_24" />

                <TextView
                    android:id="@+id/showpt"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_text_shape"
                    android:backgroundTint="@color/greyish"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tvartist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvsong_pic"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"

                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvsong_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/tvartist"
                android:maxLines="2"
                android:paddingLeft="@dimen/_8sdp"

                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsong_name"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toRightOf="@id/clock"
                    android:text="0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/playSong1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_play_black_clr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_185sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/view_deisgn">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvsong_pic2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/song_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:background="@drawable/ic_baseline_library_music_24" />

                <TextView
                    android:id="@+id/showpt2"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_text_shape"
                    android:backgroundTint="@color/greyish"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tvartist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvsong_pic2"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"

                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvsong_name2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/tvartist2"
                android:maxLines="2"
                android:paddingLeft="@dimen/_8sdp"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsong_name2"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/duration2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toRightOf="@id/clock"
                    android:text="0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/playSong2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_play_black_clr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

